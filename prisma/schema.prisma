// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./audit.db"
}

model GroceryList {
  id      Int      @id @default(autoincrement())
  title   String
  checked Boolean? @default(false)
}

model Audit {
  id      Int     @id @default(autoincrement())
  title   String
  qmsref  String
}

model Checklist {
  id      Int     @id @default(autoincrement())
  auditid Int
  sql     Int
  cltext    String
  process String

}

model Results {
  @id       Int    @id @default(autoincrement())
  auditid   Int
  clid      Int
  result    String
  passfail  String
  corrid    Int
  flup      String
}